@model LoginViewModel
<head>
    <link href=@Url.Content("~/styles/app.css") rel="stylesheet" type="text/css"/>
</head>
<form asp-controller="Auth" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="header">Login</div>
    <div class="block">
        <label>Username:</label>
        <input asp-for="Username" class="input" />
        <span asp-validation-for="Username"/>
    </div>
    <div class="block">
        <label>Password:</label>
        <input type="password" asp-for="Password" class="input" />
        <span asp-validation-for="Password" />
    </div>
    <div class="block">
        <button type="submit" class="button"> Sign in </button>
    </div>
    <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="switch-button">Register</a>

</form>
